{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "module": "esnext",
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "sourceMap": true,
    "composite": true,
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "jsx": "preserve",
    "plugins": [
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      }
    ],
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "paths": {
      "src/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src",
    "src/../package.json",
    "ambient.d.ts"
  ]
}
